<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/srlDust"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/ivLocation"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_location_on_black_24dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tvLocationLabel"
                    android:layout_toRightOf="@id/ivLocation"
                    android:paddingStart="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"

                    android:text="Location"
                    tools:text="location"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLocation"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:paddingStart="24dp"
                    android:paddingRight="24dp"
                    android:layout_below="@id/ivLocation"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textIsSelectable="true"
                    tools:text="city"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/ivTime"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_access_time_black_24dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tvTimeLabel"
                    android:layout_toRightOf="@id/ivTime"
                    android:paddingStart="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="Time"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTime"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:paddingStart="24dp"
                    android:paddingRight="24dp"
                    android:layout_below="@id/ivTime"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    tools:text="city"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/ivDust"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_dust_on_black_24dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tvDustLabel"
                    android:layout_toRightOf="@id/ivDust"
                    android:paddingStart="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="Micro Dust"
                    tools:text="Micro Dust"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDust"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:paddingStart="24dp"
                    android:paddingRight="24dp"
                    android:layout_below="@id/ivDust"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    tools:text="city"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
